<p id="notice"><%= notice %></p>

<h1>Movies</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Genre</th>
      <th>Rating</th>
      <th>Lead</th>
      <th>Director</th>
      <th>Year</th>
      <th>Type</th>
      <th>Duration</th>
      <th>Theater</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @movies.each do |movie| %>
      <tr>
        <td><%= movie.Title %></td>
        <td><%= movie.Genre %></td>
        <td><%= movie.Rating %></td>
        <td><%= movie.Lead %></td>
        <td><%= movie.Director %></td>
        <td><%= movie.Year %></td>
        <td><%= movie.Type %></td>
        <td><%= movie.Duration %></td>
        <td><%= movie.Theater %></td>
        <td><%= link_to 'Show', movie %></td>
        <td><%= link_to 'Edit', edit_movie_path(movie) %></td>
        <td><%= link_to 'Destroy', movie, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

