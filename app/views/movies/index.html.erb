<p id="notice"><%= notice %></p>

<div class="container-fluid">
  <h3>Movies at Grand Lodge on Peak 7 - Theaters 3 and 4</h3>
</div>

<div class="container-fluid mb-2">
  <%= form_tag "/movies", method: :get, class: 'form-inline' do %>
  <div class='form-group'>
    <%= text_field_tag :title, params[:title], placeholder: "Title", size: 30, class: 'form-control' %>
    <%= text_field_tag :rating, params[:rating], placeholder:  "Rating", size: 5, class: 'form-control' %>
    <%= text_field_tag :genre, params[:genre], placeholder:  "Genre", size: 10, class: 'form-control' %>
  </div>  
  <div class='form-group'>  
    <%= text_field_tag :lead, params[:lead], placeholder:  "Lead", class: 'form-control' %>
    <%= text_field_tag :director, params[:director], placeholder:  "Director", class: 'form-control' %>
    <%= text_field_tag :medium, params[:medium], placeholder:  "Type", size: 5, class: 'form-control' %>
    <%= submit_tag "Search", class: 'btn btn-primary'%>
  </div>  
  <% end %>
</div>

<div class="container-fluid">
  <table class="table table-sm table-bordered table-responsive table-striped table-hover sortable">
    <thead >
      <tr>
        <th data-defaultsort="asc">Title</th>
        <th>Rating</th>
        <th>Genre</th>
        <th>Lead/Director</th>
        <!-- <th>Director</th> -->
        <th>Year</th>
        <th>Type</th>
        <th>Duration</th>
        <!-- <th>Theater</th> -->
        <!-- <th colspan="3"></th> -->
      </tr>
    </thead>

    <tbody>
      <% @movies.each do |movie| %>
      <tr>
        <td><%= movie.title %></td>
        <td class='tdsmall'><%= movie.rating %></td>
        <td class='tdsmall'><%= movie.genre %></td>
        <td class='tdsmall'><%= movie.lead %>/ <%= movie.director %></td>
        <!-- <td><<%= movie.director %></td> -->
        <td class='tdsmall'><%= movie.year %></td>
        <td class='tdsmall text-nowrap'><%= movie.medium %></td>
        <td class='tdsmall'><%= movie.duration %></td>
        <!-- <td class='tdsmall'><%= movie.theater %></td> -->
        <!-- <td><%= link_to 'Show', movie %></td>
          <td><%= link_to 'Edit', edit_movie_path(movie) %></td>
          <td><%= link_to 'Destroy', movie, method: :delete, data: { confirm: 'Are you sure?' } %></td> -->
        </tr>
        <% end %>
      </tbody>
    </table>
  </div>
